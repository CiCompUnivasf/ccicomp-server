{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "apps/ccicomp-server/src/*"
      ],
      "@ccicomp/core": [
        "libs/core/src"
      ],
      "@ccicomp/core/*": [
        "libs/core/src/*"
      ],
      "@ccicomp/crypto": [
        "libs/crypto/src"
      ],
      "@ccicomp/crypto/*": [
        "libs/crypto/src/*"
      ],
      "@ccicomp/common": [
        "libs/common/src"
      ],
      "@ccicomp/common/*": [
        "libs/common/src/*"
      ],
      "@ccicomp/storage": [
        "libs/storage/src"
      ],
      "@ccicomp/storage/*": [
        "libs/storage/src/*"
      ],
      "@ccicomp/notification": [
        "libs/notification/src"
      ],
      "@ccicomp/notification/*": [
        "libs/notification/src/*"
      ]
    }
  }
}